<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:animateLayoutChanges="true"
    tools:context=".TourGuide.TG_Sign_Up">

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="91dp"
        android:layout_height="81dp"
        android:background="@color/white"
        android:contentDescription="back button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/back_icon" />

    <ImageButton
        android:id="@+id/right_image"
        android:layout_width="73dp"
        android:layout_height="85dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/right_image" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:contentDescription="title"
        android:text="Sign Up"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_50sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <LinearLayout
            android:layout_width="@dimen/_300sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_89sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="0dp"
                android:src="@drawable/add_photo"
                app:civ_border_width="0dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                app:boxStrokeWidth="0dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/firstNameTG"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="57dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/signup_input"
                    android:hint=" * First Name"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:boxStrokeWidth="0dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/lastNameTG"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="57dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/signup_input"
                    android:hint=" * Last Name"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:boxStrokeWidth="0dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailTG"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="57dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/signup_input"
                    android:hint=" * Email"
                    android:inputType="textEmailAddress" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/passwordLayoutTG"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:boxStrokeWidth="0dp"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/passwordTG"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="57dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/signup_input"
                    android:hint=" * Password"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/passwordCondirmtionLayoutTG"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:boxStrokeWidth="0dp"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/passwordConformationTG"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="57dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/signup_input"
                    android:hint=" * Password Conformation"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:boxStrokeWidth="0dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/briefDescriptionTG"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="57dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/signup_input"
                    android:hint=" * Personal Brief Description "
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/signup_input"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    app:boxStrokeWidth="0dp"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/birthDateTG"
                        android:layout_width="@dimen/_227sdp"
                        android:layout_height="57dp"
                        android:layout_gravity="center"
                        android:background="@drawable/signup_input"
                        android:ems="10"
                        android:hint=" * Birth Date "
                        android:inputType="date"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:layout_editor_absoluteY="111dp" />


                </com.google.android.material.textfield.TextInputLayout>

                <ImageButton
                    android:id="@+id/dialogButton"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="57dp"

                    android:background="@drawable/signup_input"
                    android:contentDescription="calender"
                    android:src="@drawable/calender_icon" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/signup_input"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutSpeakingLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    app:boxStrokeWidth="0dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/speakingLanguageTG"
                        android:layout_width="@dimen/_227sdp"
                        android:layout_height="57dp"
                        android:layout_gravity="center"
                        android:background="@drawable/signup_input"
                        android:ems="10"
                        android:hint=" Speaking Language"
                        android:inputType="text"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:layout_editor_absoluteY="111dp" />


                </com.google.android.material.textfield.TextInputLayout>

                <ImageButton
                    android:id="@+id/spinner"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="57dp"
                    android:background="@drawable/signup_input"
                    android:contentDescription="speaking language"
                    android:src="@drawable/drop_down_arrow" />


            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonSignUp"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="57dp"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="16dp"
                android:text="Sign Up"
                android:textColor="@color/white" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>