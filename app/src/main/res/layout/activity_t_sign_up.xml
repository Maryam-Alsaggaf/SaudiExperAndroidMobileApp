<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:animateLayoutChanges="true"
    tools:context=".Tourist.T_Sign_Up">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="411dp"
        android:layout_height="78dp"
        android:gravity="center"
        android:text="Sign up "
        android:textSize="@dimen/_16ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="2dp" />

    <ImageView
            android:id="@+id/imageView3"
            android:layout_width="47dp"
            android:layout_height="77dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/right_image" />


    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="72dp"
        android:layout_height="83dp"
        android:background="@color/white"
        android:contentDescription="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/back_icon" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton2">

        <LinearLayout
            android:layout_width="@dimen/_300sdp"
            android:layout_height="57dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:padding="@dimen/_8sdp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:boxStrokeWidth="0dp"
                app:endIconDrawable="@drawable/ic_baseline_delete_outline_24"
                app:endIconMode="clear_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/firstNameT"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="57dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="@dimen/_19sdp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/signup_input"
                    android:backgroundTint="@color/lightGreen"
                    android:ems="10"
                    android:hint=" * First name "
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:layout_editor_absoluteY="111dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:boxStrokeWidth="0dp"
                app:endIconDrawable="@drawable/ic_baseline_delete_outline_24"
                app:endIconMode="clear_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/last_nameT"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="57dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/signup_input"
                    android:backgroundTint="@color/lightGreen"
                    android:ems="10"
                    android:hint=" * Last name "
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:layout_editor_absoluteY="111dp" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:boxStrokeWidth="0dp"
                app:endIconDrawable="@drawable/ic_baseline_delete_outline_24"
                app:endIconMode="clear_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/phoneNumberT"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="57dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/signup_input"
                    android:ems="10"
                    android:hint=" * Phone Number "
                    android:inputType="phone"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:layout_editor_absoluteY="111dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:boxStrokeWidth="0dp"
                app:endIconDrawable="@drawable/ic_baseline_delete_outline_24"
                app:endIconMode="clear_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailT"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="57dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/signup_input"
                    android:ems="10"
                    android:hint=" * Email"
                    android:inputType="textEmailAddress"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:layout_editor_absoluteY="111dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/passwordLayout"
                android:layout_width="match_parent"
                app:boxStrokeWidth="0dp"
                android:layout_height="match_parent"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/passwordT"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="57dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/signup_input"
                    android:ems="10"
                    android:hint=" * Password "
                    android:inputType="textPassword"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:layout_editor_absoluteY="111dp" />
            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/passwordConfirmitiondLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:boxStrokeWidth="0dp"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/passwordConfirmitionT"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="57dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/signup_input"
                    android:ems="10"
                    android:hint=" * Confirmation Password"
                    android:inputType="textPassword"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:layout_editor_absoluteY="111dp" />
            </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/signup_input"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout"
                app:boxStrokeWidth="0dp"
                android:layout_width="match_parent"
                android:layout_height="57dp"

                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/birthDateT"
                    android:layout_width="@dimen/_227sdp"

                    android:layout_height="57dp"
                    android:layout_gravity="center"
                    android:background="@drawable/signup_input"
                    android:ems="10"
                    android:hint=" * Birth Date "
                    android:inputType="date"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:layout_editor_absoluteY="111dp" />


            </com.google.android.material.textfield.TextInputLayout>
               <ImageButton
                   android:id="@+id/dialogButton"
                   android:layout_width="@dimen/_25sdp"
                   android:layout_height="57dp"
                   android:background="@drawable/signup_input"
                   android:contentDescription="calender"
                   app:srcCompat="@drawable/calender_icon"/>



        </LinearLayout>


            <TextView
                android:id="@+id/textView9"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="16dp"
                android:text="  * Choose Gender" />

            <RadioGroup
                android:layout_width="@dimen/_250sdp"
                android:layout_height="57dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_8sdp"
                android:background="@drawable/signup_input"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="134dp"
                    android:layout_height="57dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/signup_input"
                    android:buttonTint="@color/darkGreen"
                    android:text="Female" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/signup_input"
                    android:buttonTint="@color/darkGreen"
                    android:text="Male" />
            </RadioGroup>

            <Button
                android:id="@+id/button"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="57dp"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="16dp"
                android:text="Sign up" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>