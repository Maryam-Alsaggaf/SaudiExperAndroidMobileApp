<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tourist.T_EditProfile">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/right_image" />

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        app:srcCompat="@drawable/back_icon" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Edit Personal Info"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_50sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton3">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/firstNameT_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_19sdp"
                app:boxStrokeWidth="0dp"
                app:endIconDrawable="@drawable/ic_baseline_delete_outline_24"
                app:endIconMode="clear_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/firstNameT"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="57dp"
                    android:layout_gravity="center"
                    android:background="@drawable/signup_input"
                    android:hint="* First Name" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/last_nameT_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_19sdp"
                app:boxStrokeWidth="0dp"
                app:endIconDrawable="@drawable/ic_baseline_delete_outline_24"
                app:endIconMode="clear_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/last_nameT"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="57dp"
                    android:layout_gravity="center"
                    android:background="@drawable/signup_input"
                    android:hint="* Last Name" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/phoneNumberT_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_19sdp"
                app:boxStrokeWidth="0dp"
                app:endIconDrawable="@drawable/ic_baseline_delete_outline_24"
                app:endIconMode="clear_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/phoneNumberT"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="57dp"
                    android:hint="* Phone"
                    android:inputType="number"
                    android:background="@drawable/signup_input"
                    android:layout_gravity="center"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_19sdp"
                app:boxStrokeWidth="0dp"
                app:endIconDrawable="@drawable/ic_baseline_delete_outline_24"
                app:endIconMode="clear_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailT"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="57dp"
                    android:enabled="false"
                    android:layout_gravity="center"
                    android:background="@drawable/signup_input"
                    android:hint="* Email" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/passwordT_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_19sdp"
                app:boxStrokeWidth="0dp"
               app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@id/passwordT"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="57dp"
                    android:layout_gravity="center"
                    android:inputType="textPassword"
                    android:background="@drawable/signup_input"
                    android:hint="* Password" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/passwordConfirmitionT_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_19sdp"
                app:boxStrokeWidth="0dp"
                app:endIconMode="password_toggle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/passwordConfirmitionT"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="57dp"
                    android:inputType="textPassword"
                    android:layout_gravity="center"
                    android:background="@drawable/signup_input"
                    android:hint="* Password Confirmation" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_19sdp"
                android:background="@drawable/signup_input"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    app:boxStrokeWidth="0dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/birthDateT"
                        android:layout_width="@dimen/_227sdp"
                        android:layout_height="57dp"
                        android:layout_gravity="center"
                        android:background="@drawable/signup_input"
                        android:ems="10"
                        android:hint=" * Birth Date "
                        android:inputType="date"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:layout_editor_absoluteY="111dp" />


                </com.google.android.material.textfield.TextInputLayout>

                <ImageButton
                    android:id="@+id/birthDateButton"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="57dp"
                    android:background="@drawable/signup_input"
                    android:contentDescription="calender"
                    app:srcCompat="@drawable/calender_icon" />


            </LinearLayout>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="16dp"
                android:text="  * Choose Gender" />

            <RadioGroup
                android:layout_width="@dimen/_250sdp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_8sdp"
                android:background="@drawable/signup_input"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="134dp"
                    android:layout_height="57dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/signup_input"
                    android:buttonTint="@color/darkGreen"
                    android:text="Female" />

                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="134dp"
                    android:layout_height="57dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/signup_input"
                    android:buttonTint="@color/darkGreen"
                    android:text="Male" />
            </RadioGroup>

            <Button
                android:id="@+id/update_button"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="57dp"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="16dp"
                android:text="Update" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>